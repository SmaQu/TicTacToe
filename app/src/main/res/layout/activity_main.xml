<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smaqu.tictactoe.MainActivity">

    <!--This margins are only for my own purpose. I don't like do something like that, because this is not good way to set size for many devices, it's only for -->

    <GridLayout
        android:id="@+id/gl_activity_main"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_row="0"
            android:tag="0"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="1"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_row="0"
            android:tag="1"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="2"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_row="0"
            android:tag="2"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="1"
            android:tag="3"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="1"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="1"
            android:tag="4"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="2"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="1"
            android:tag="5"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="2"
            android:tag="6"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="1"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="2"
            android:tag="7"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_column="2"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_row="2"
            android:tag="8"
            tools:ignore="contentDescription" />
    </GridLayout>

</RelativeLayout>
