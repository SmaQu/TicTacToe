<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_dialog_fragment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:textColor="#9e9e9e"
        android:gravity="center"
        android:padding="9dp"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_dialog_fragment_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_dialog_fragment_label"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/red" />

    <Button
        android:id="@+id/b_dialog_fragment_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_fragment_icon"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="@string/play_again" />

</RelativeLayout>